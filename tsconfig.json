{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"module": "esnext",
		"target": "es6",
		"lib": [
			"esnext"
		],
		"sourceMap": true,
		"allowJs": false,
		"jsx": "react",
		"declaration": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"src/"
	],
	"exclude": [
		"node_modules",
		"dist",
		"example",
	]
}